{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "demo/**/*",
    "test/**/*"
  ],
  "ts-node": {
    "esm": false
  }
}